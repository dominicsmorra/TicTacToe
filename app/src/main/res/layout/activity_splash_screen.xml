<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="200dp"
        android:text="@string/rules"
        tools:text="@string/rules" />

    <EditText
        android:id="@+id/etPlayer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:hint="Enter Player 1 Name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etPlayer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPlayer1"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:hint="Enter Computer Name"
        android:padding="8dp" />


    <Button
        android:id="@+id/bPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPlayer2"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="PLAY"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />




</RelativeLayout>